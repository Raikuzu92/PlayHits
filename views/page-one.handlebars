<div class="container-fluid">
    <div class="row">
        <!-- Left Column: Your Playlists -->
        <div class="col-md-3 bg-dark text-white p-4" id="playlist-column">
            <h3>Your Playlists</h3>
            {{#if playlists.length}}
                <ul class="list-group">
                    {{#each playlists}}
                        <li class="list-group-item bg-dark text-white" data-playlist-id="{{this.id}}">
                            {{this.name}}
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>Whoops, looks like you don't have any playlists yet.</p>
            {{/if}}
        </div>

        <!-- Center Column: All Songs -->
        <div class="col-md-6 p-4" id="songs-column">
            <div class="search-bar">
                <input type="text" class="form-control" id="song-search" placeholder="Search for a song...">
            </div>
            <button class="btn" id="search-button">Search</button>
            <div id="song-list">
                {{#each popularSongs}}
                    <div class="song-item row">
                        <div class="col-9">
                            <h5>{{this.title}} - {{this.artist}}</h5>
                            <p>{{this.album}} | Released: {{this.dateReleased}} | Duration: {{this.duration}} mins</p>
                        </div>
                        <div class="col-3 text-end">
                            <button class="btn btn-outline-light add-to-playlist-btn" data-song-id="{{this.id}}">
                                <i class="fas fa-plus"></i> Add to Playlist
                            </button>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>

        <!-- Right Column: Song Details -->
        <div class="col-md-3 bg-dark text-white p-4" id="song-details-column">
            <!-- Details will be dynamically loaded here -->
        </div>
    </div>
</div>
