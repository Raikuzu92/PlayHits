<div class="signup-container">
  <div class="signup-card">
    <div class="signup-left">
      <img src="/images/playHits_fullLogo.png" alt="PlayHits Logo" class="signup-icon">
    </div>
    <div class="signup-right">
      <h2 class="signup-title">Create an Account</h2>
      <form id="signup-form" action="/signup" method="POST">
        <div class="form-group">
          <input type="text" id="username-input-signup" name="username" placeholder="Username" class="form-input" required>
          <div id="username-feedback" class="feedback-message"></div>
        </div>
        <div class="form-group">
          <input type="email" id="email-input-signup" name="email" placeholder="Email" class="form-input" required>
          <!-- Add feedback for email validation if needed -->
        </div>
        <div class="form-group">
          <input type="password" id="password-input-signup" name="password" placeholder="Password" class="form-input" required>
          <div id="password-feedback" class="feedback-message"></div>
        </div>
        <button type="submit" class="signup-button">SIGN UP</button>
      </form>
      <a href="/login" class="signup-link">Already have an Account? Login â†’</a>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>


